<Window x:Class="WPFFormProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFFormProject"
        xmlns:uc="clr-namespace:WPFFormProject.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="500">
    <Grid Background="#EEE">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border Margin="20,20" Background="White" Padding="10" BorderThickness="1" BorderBrush="Gray" CornerRadius="1">
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="Padding" Value="5"/>
                    </Style>

                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="14"/>
                    </Style>

                    <Style TargetType="TextBlock" x:Key="TextBlockHeader">
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </StackPanel.Resources>
               
                <!--buttons-->
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="applyBtn" Margin="0, 0, 5, 0" Grid.Column="0" Content="Apply" Click="applyBtn_Click"/>
                        <Button x:Name="resetBtn" Grid.Column="1"  Content="Reset" Click="resetBtn_Click"/>
                        <Button x:Name="refreshBtn" Margin="5, 0, 0, 0"  Grid.Column="2"  Content="Refresh" Click="refreshBtn_Click"/>
                    </Grid>
                </Grid>
             
                <!--pulse properties-->
                <StackPanel  Margin="0,10,0,0">
                    <TextBlock  Style="{StaticResource TextBlockHeader}" Text="Pulse Properties"/>
                    <TextBlock  Margin="0,5,0,0"
                        Text="Description"/>

                    <!--<uc:SubHeadingTextBox Text="Pulse Properties"/>-->
                    <TextBox x:Name="pulseDescriptionTextBox" TextWrapping="Wrap" AcceptsReturn="True"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        
                        <StackPanel Grid.Column="0" Margin="0, 0, 10, 0" >
                            <TextBlock Text="Status"/>
                            <TextBox  x:Name="statusTextBox" Background="#eee" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" >
                            <TextBlock  Text="Revision"/>
                            <TextBox x:Name="revisionTextBox" Background="#eee"/>
                        </StackPanel>
                        
                        
                    </Grid>

                    <TextBlock Text="Part Number"/>
                    <TextBox x:Name="partNumberTextBox"  Background="#eee" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>
                
                <!--Raw Material-->
                <StackPanel  Margin="0,10,0,0">
                    <TextBlock  Style="{StaticResource TextBlockHeader}" Text="Raw Material"/>
                    <TextBlock Margin="0,5,0,0"
         Text="Material"/>

                    <ComboBox Name="rawMaterialComboBox">
                        <ComboBoxItem Content="Steel 316"/>
                        <ComboBoxItem Content="Aluminium 6082"/>
                        <ComboBoxItem Content="Brass CZ121"/>
                        <ComboBoxItem Content="Copper C110"/>
                    </ComboBox>
                </StackPanel>

                <!--Manufacturing Information-->
                <StackPanel  Margin="0,10,0,0">
                    <TextBlock  Style="{StaticResource TextBlockHeader}" Text="Manufacturing Information"/>
                    <TextBlock  Margin="0,5,0,5"
Text="Work Centres"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Margin="5, 0, 0, 0">
                            <CheckBox x:Name="weildChb" Content="Weild" Checked="weildChb_Checked" Click="weildChb_Click" />
                            <CheckBox x:Name="assemblyChb" Content="Assembly"/>
                            <CheckBox x:Name="plasmaChb" Content="Plasma"/>
                            <CheckBox x:Name="laserChb" Content="Laser"/>
                            <CheckBox x:Name="purchaseChb" Content="Purchase"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5, 0, 0, 0" >
                            <CheckBox x:Name="latheChb" Content="Lathe"/>
                            <CheckBox x:Name="drillChb" Content="Drill"/>
                            <CheckBox x:Name="foldChb" Content="Fold"/>
                            <CheckBox x:Name="rollChb" Content="Roll"/>
                            <CheckBox x:Name="sawChb" Content="Saw"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!--Length-->
                <TextBlock Text="Length" Margin="0,10,0,0"/>
                <TextBox x:Name="lengthTextBox"/>

                <!--Mass-->
                <TextBlock Text="Mass" Margin="0,10,0,0"/>
                <TextBox x:Name="massTextBox" />

                <!--Finished-->
                <TextBlock Text="Finished" Margin="0,10,0,0"/>
                <ComboBox Name="finishedCb" SelectedIndex="0">
                    <ComboBoxItem Content="Painted"/>
                </ComboBox>
                
                <!--Purshased Information-->
                <TextBlock Text="Purchased Information" Margin="0,10,0,0"/>
                <ComboBox SelectedIndex="0">
                    <ComboBoxItem Content="Rubber "/>
                </ComboBox>

                <!--Supplier Nam-->
                <TextBlock x:Name="supplierNameTextBox" Text="Supplier Name" Margin="0,10,0,0"/>
                <TextBox />

                <!--Supplier Code-->
                <TextBlock x:Name="supplierCodeTextBox" Text="Supplier Code" Margin="0,10,0,0"/>
                <TextBox />

                <!--Addition Information-->
                <TextBlock Text="Addition Information" Margin="0,20,0,20" FontWeight="Bold"/>
                
                <TextBlock Text="Note" Margin="0,10,0,0"/>
                <TextBox />

            </StackPanel>
      
            
        </Border>
        </ScrollViewer>

    </Grid>
</Window>
