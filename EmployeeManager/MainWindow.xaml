
<!--xmlns:viewmodels="clr-namespace:EmployeeManagement.ViewModels"-->
<Window x:Class="EmployeeManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:EmployeeManager.ViewModels"
    mc:Ignorable="d"
    Title="Employee Management System" 
    Height="700" 
    Width="1200"
    WindowStartupLocation="CenterScreen">

    <!-- 
        Window.DataContext sets the ViewModel for this View
        All bindings in this XAML refer to properties/commands in MainViewModel
        This is the core of MVVM - View binds to ViewModel, no code-behind needed
    -->
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <!-- 
        Window.Resources defines reusable styles and templates
        Styles provide consistent look and feel across the application
    -->
    <Window.Resources>
        <!-- Style for all TextBoxes in this window -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style for all ComboBoxes -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style for all DatePickers -->
        <Style TargetType="DatePicker">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- Style for all Buttons -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>

            <!-- Trigger changes style when button is disabled -->
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for Labels -->
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,5,0,5"/>
        </Style>
    </Window.Resources>

    <!-- 
        Main Grid layout - defines the structure of the window
        RowDefinitions create three rows with different heights
        * means "take remaining space"
        Auto means "size to content"
    -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Main content (takes remaining space) -->
            <RowDefinition Height="Auto"/>
            <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- 
            ==============================================
            TOOLBAR - Row 0
            Contains buttons for main actions
            ==============================================
        -->
        <Border Grid.Row="0" 
                Background="#2196F3" 
                Padding="10">
            <StackPanel Orientation="Horizontal">
                <!-- 
                    Button Command binding - connects to ICommand in ViewModel
                    No Click event needed - MVVM uses Commands
                    Button automatically enables/disables based on Command.CanExecute
                -->
                <Button Content="➕ Add Employee" 
                        Command="{Binding AddEmployeeCommand}"
                        Background="#4CAF50"
                        Foreground="White"/>

                <Button Content="✏️ Edit Employee" 
                        Command="{Binding EditEmployeeCommand}"
                        Background="#FF9800"
                        Foreground="White"/>

                <Button Content="🗑️ Delete Employee" 
                        Command="{Binding DeleteEmployeeCommand}"
                        Background="#F44336"
                        Foreground="White"/>

                <Button Content="🔄 Refresh" 
                        Command="{Binding LoadEmployeesCommand}"
                        Background="#607D8B"
                        Foreground="White"/>

                <!-- Separator for visual grouping -->
                <Separator Width="20" Background="Transparent"/>

                <!-- 
                    Search functionality
                    TextBox.Text uses TwoWay binding - changes in either direction sync
                    UpdateSourceTrigger=PropertyChanged updates ViewModel on every keystroke
                -->
                <TextBox Width="200" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Center">
                    <!-- Watermark text shown when TextBox is empty -->
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Height" Value="30"/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="🔍 Search employees..." 
                                                             Foreground="Gray" 
                                                             Margin="5,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Button Content="Search" 
                        Command="{Binding SearchCommand}"
                        Background="#3F51B5"
                        Foreground="White"/>

                <Button Content="Clear" 
                        Command="{Binding ClearSearchCommand}"
                        Background="#9E9E9E"
                        Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- 
            ==============================================
            MAIN CONTENT AREA - Row 1
            Split into two columns using Grid
            Left side: Employee list (DataGrid)
            Right side: Employee details form
            ==============================================
        -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Employee list takes 2/3 of space -->
                <ColumnDefinition Width="*"/>
                <!-- Form takes 1/3 of space -->
            </Grid.ColumnDefinitions>

            <!-- 
                ==============================================
                LEFT PANEL - Employee List (DataGrid)
                ==============================================
            -->
            <GroupBox Grid.Column="0" 
                      Header="Employee List" 
                      Margin="0,0,5,0">
                <!-- 
                    DataGrid - displays tabular data
                    ItemsSource binds to ObservableCollection in ViewModel
                    SelectedItem binds to SelectedEmployee property
                    When user clicks a row, SelectedEmployee is automatically updated
                    
                    Key properties explained:
                    - AutoGenerateColumns=False: We define columns manually
                    - IsReadOnly=True: Grid is for viewing only (edit in form)
                    - SelectionMode=Single: Only one row can be selected
                    - CanUserSortColumns=True: User can click headers to sort
                    - AlternatingRowBackground: Every other row has different color
                -->
                <DataGrid ItemsSource="{Binding Employees}"
                          SelectedItem="{Binding SelectedEmployee}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserSortColumns="True"
                          AlternatingRowBackground="#F5F5F5"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">

                    <!-- 
                        Define columns manually for better control
                        Binding specifies which property to display
                    -->
                    <DataGrid.Columns>
                        <!-- ID column - usually hidden or read-only -->
                        <DataGridTextColumn Header="ID" 
                                          Binding="{Binding EmployeeId}" 
                                          Width="50"/>

                        <!-- Name columns -->
                        <DataGridTextColumn Header="First Name" 
                                          Binding="{Binding FirstName}" 
                                          Width="120"/>

                        <DataGridTextColumn Header="Last Name" 
                                          Binding="{Binding LastName}" 
                                          Width="120"/>

                        <!-- Email with custom width -->
                        <DataGridTextColumn Header="Email" 
                                          Binding="{Binding Email}" 
                                          Width="200"/>

                        <!-- Phone number -->
                        <DataGridTextColumn Header="Phone" 
                                          Binding="{Binding Phone}" 
                                          Width="120"/>

                        <!-- 
                            Date column with formatting
                            StringFormat applies .NET format strings
                        -->
                        <DataGridTextColumn Header="Hire Date" 
                                          Binding="{Binding HireDate, StringFormat={}{0:MM/dd/yyyy}}" 
                                          Width="100"/>

                        <!-- 
                            Currency column with formatting
                            C2 means currency with 2 decimal places
                        -->
                        <DataGridTextColumn Header="Salary" 
                                          Binding="{Binding Salary, StringFormat={}{0:C2}}" 
                                          Width="100"/>

                        <!-- Department name from joined data -->
                        <DataGridTextColumn Header="Department" 
                                          Binding="{Binding DepartmentName}" 
                                          Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- 
                ==============================================
                RIGHT PANEL - Employee Entry Form
                Visibility bound to SelectedEmployee
                Form only appears when adding or editing
                ==============================================
            -->
            <GroupBox Grid.Column="1" 
                      Header="Employee Details" 
                      Margin="5,0,0,0">

                <!-- 
                    Visibility converter - built-in WPF feature
                    If SelectedEmployee is null, panel is Collapsed
                    If SelectedEmployee exists, panel is Visible
                -->
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedEmployee}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </GroupBox.Style>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!-- 
                            Each field follows same pattern:
                            1. Label for description
                            2. Input control (TextBox, ComboBox, etc.)
                            3. Binding to SelectedEmployee property with validation
                            
                            TwoWay binding: Changes in TextBox update ViewModel
                                           Changes in ViewModel update TextBox
                            UpdateSourceTrigger=PropertyChanged: Update on every keystroke
                        -->

                        <!-- First Name -->
                        <Label Content="First Name:" FontWeight="Bold"/>
                        <TextBox Text="{Binding SelectedEmployee.FirstName, 
                                       UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Last Name -->
                        <Label Content="Last Name:" FontWeight="Bold"/>
                        <TextBox Text="{Binding SelectedEmployee.LastName, 
                                       UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Email -->
                        <Label Content="Email:" FontWeight="Bold"/>
                        <TextBox Text="{Binding SelectedEmployee.Email, 
                                       UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Phone -->
                        <Label Content="Phone:" FontWeight="Bold"/>
                        <TextBox Text="{Binding SelectedEmployee.Phone, 
                                       UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Hire Date -->
                        <Label Content="Hire Date:" FontWeight="Bold"/>
                        <DatePicker SelectedDate="{Binding SelectedEmployee.HireDate}"/>

                        <!-- Salary -->
                        <Label Content="Salary:" FontWeight="Bold"/>
                        <TextBox Text="{Binding SelectedEmployee.Salary, 
                                       UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- 
                            Department ComboBox
                            ItemsSource: List of all departments
                            DisplayMemberPath: What to show in dropdown (DepartmentName)
                            SelectedValuePath: What value to use (DepartmentId)
                            SelectedValue: Binds to employee's DepartmentId
                            
                            This creates a lookup dropdown that shows names
                            but stores IDs in the employee record
                        -->
                        <Label Content="Department:" FontWeight="Bold"/>
                        <ComboBox ItemsSource="{Binding Departments}"
                                 DisplayMemberPath="DepartmentName"
                                 SelectedValuePath="DepartmentId"
                                 SelectedValue="{Binding SelectedEmployee.DepartmentId}"/>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,20,0,0">

                            <!-- 
                                Save button changes text based on IsEditMode
                                Uses DataTrigger to show "Update" or "Save"
                            -->
                            <Button Command="{Binding SaveEmployeeCommand}"
                                   Background="#4CAF50"
                                   Foreground="White"
                                   MinWidth="100">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Content" Value="💾 Save"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                                <Setter Property="Content" Value="💾 Update"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="❌ Cancel" 
                                   Command="{Binding CancelCommand}"
                                   Background="#F44336"
                                   Foreground="White"
                                   MinWidth="100"/>
                        </StackPanel>

                        <!-- Info Text -->
                        <TextBlock Margin="10,20,10,10" 
                                  TextWrapping="Wrap" 
                                  Foreground="Gray"
                                  FontSize="11">
                            <Run Text="💡 Tip: Click 'Add Employee' to create new employee, "/>
                            <Run Text="select row and click 'Edit' to modify, "/>
                            <Run Text="or click 'Delete' to remove."/>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>

        <!-- 
            ==============================================
            STATUS BAR - Row 2
            Shows status messages and record count
            ==============================================
        -->
        <StatusBar Grid.Row="2" Background="#F5F5F5">
            <StatusBarItem>
                <!-- Icon for visual feedback -->
                <TextBlock Text="ℹ️" Margin="5,0"/>
            </StatusBarItem>
            <StatusBarItem>
                <!-- 
                    Status message bound to ViewModel
                    Updates automatically when StatusMessage property changes
                -->
                <TextBlock Text="{Binding StatusMessage}" 
                          FontWeight="SemiBold"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <!-- Shows total employee count -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total Employees: " Foreground="Gray"/>
                    <TextBlock Text="{Binding Employees.Count}" 
                              FontWeight="Bold" 
                              Foreground="#2196F3"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>