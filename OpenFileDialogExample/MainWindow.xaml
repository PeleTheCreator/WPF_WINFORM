<Window x:Class="OpenFileDialogExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenFileDialogExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="fireBtn" Content="Show Message Box" Width="150" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Click="fireBtn_Click"/>

        <TextBox x:Name="fileInfoText" Grid.Row="1" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" IsReadOnly="True" Width="500" Height="200" TextAlignment="Center"/>
    </Grid>
</Window>
