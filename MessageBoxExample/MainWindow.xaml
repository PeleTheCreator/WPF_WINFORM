<Window x:Class="MessageBoxExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessageBoxExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="showMsgBoxBtn" Content="Show Message Box" Width="150" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Click="showMsgBoxBtn_Click"/>

        <TextBox x:Name="resultTxt" Grid.Row="1" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" IsReadOnly="True" Width="300" Height="40" TextAlignment="Center"/>
        
    </Grid>
</Window>
