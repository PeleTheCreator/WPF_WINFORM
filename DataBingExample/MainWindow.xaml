<Window x:Class="DataBingExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBingExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="inputTxt" Text="{Binding BoundText, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" VerticalContentAlignment="Center" Width="300" Height="40"/>
        <Button Grid.Row="1" Name="setBtn" Content="Set" Width="100" Height="40" Click="setBtn_Click"/>
        <TextBlock Grid.Row="2" x:Name="displayTxt" FontSize="16" FontWeight="Bold" Text="{Binding BoundText}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
