<Window x:Class="CustomUserControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomUserControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">
    <Grid>
        <!--<local:MyCustomUserControl Title="Hello from UserControl" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto"  />
            <RowDefinition Height="40"  />
        </Grid.RowDefinitions>

        <local:MyCustomTextBox Grid.Row="1" Width="250" Height="40" Placeholder="First Name..."/>
        <local:MyCustomTextBox Grid.Row="2" Width="250" Height="40" Placeholder="Last Name..."/>
        <local:MyCustomTextBox Grid.Row="3" Width="250" Height="40" Placeholder="Email..."/>
        <local:MyCustomTextBox Grid.Row="4" Width="250" Height="40" Placeholder="Phone Number..."/>
    </Grid>
</Window>
